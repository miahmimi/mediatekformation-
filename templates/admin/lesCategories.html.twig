{% extends "baseadmin.html.twig" %}
{% block body%}

     <form class="form-inline mt-1" method="POST" action="{{ path('categorie.ajout') }}">
        <div class="form-group mr-1 mb-2">
            <input type="text" class="sm" name="nom">
            <button type="submit" class="btn btn-primary mb-2 btn-sm">Ajouter</button>
        </div>
    </form>   
     <table  class="table table-striped">  
        <thead>
            <tr>
                
                
                <th class="text-left align-top" scope="col">
                    <h3>Toute les categories : </h3><br />
                                       
                </th>
                
               
                <th class="text-center align-top" scope="col">
                    &nbsp;
                </th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr class="align-middle">
                    <td>
                        <h5 class="text-info">
                             
                                 {{ categorie.name }}
                                 
                        </h5>
                    </td>
 
                     <td class="text-center">
                            <a href="{{ path('categorie.suppr', {id:categorie.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ categorie.name }} ?')">Supprimer</a>
                   
                    </td>
                    
                </tr>
               
            {% endfor %}
            
        </tbody>
      
    </table>
    
    
{% endblock %}
